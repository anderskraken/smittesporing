<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="110dp">


            <TextView
                android:id="@+id/title"
                style="@style/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@string/symptoms_register_info_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                style="@style/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/symptoms_possible_infection_sources"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/progressBackground" />

            <TextView
                android:id="@+id/suspectInfectionQuestion"
                style="@style/textBasic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/symptoms_suspect_infection_question"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="@+id/subtitle"
                app:layout_constraintTop_toBottomOf="@+id/subtitle" />

            <RadioGroup
                android:id="@+id/suspectInfectionGroup"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selection_group_outline"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="@+id/suspectInfectionQuestion"
                app:layout_constraintTop_toBottomOf="@+id/suspectInfectionQuestion">


                <RadioButton
                    android:id="@+id/suspectInfectionYes"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/yes"
                    android:textColor="@color/radio_flat_text_selector" />

                <RadioButton
                    android:id="@+id/suspectInfectionNo"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/no"
                    android:textColor="@color/radio_flat_text_selector" />

            </RadioGroup>


            <TextView
                android:id="@+id/contactLabel"
                style="@style/textBasic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/symptoms_in_contact_with_infected_question"
                app:layout_constraintEnd_toEndOf="@+id/suspectInfectionGroup"
                app:layout_constraintStart_toStartOf="@+id/suspectInfectionGroup"
                app:layout_constraintTop_toBottomOf="@+id/suspectInfectionGroup" />

            <RadioGroup
                android:id="@+id/contactGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/selection_group_outline"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="@+id/contactLabel"
                app:layout_constraintStart_toStartOf="@+id/contactLabel"
                app:layout_constraintTop_toBottomOf="@+id/contactLabel">

                <RadioButton
                    android:id="@+id/contactGroupYes"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/yes"
                    android:textColor="@color/radio_flat_text_selector" />

                <RadioButton
                    android:id="@+id/contactGroupNo"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/no_dont_know"
                    android:textColor="@color/radio_flat_text_selector" />

            </RadioGroup>

            <TextView
                android:id="@+id/lastContact"
                style="@style/textBasic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/symptoms_last_contact_with_infected"
                app:layout_constraintEnd_toEndOf="@id/contactGroup"
                app:layout_constraintStart_toStartOf="@+id/contactGroup"
                app:layout_constraintTop_toBottomOf="@+id/contactGroup" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastContactInput"
                style="@style/inputOutlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconTint="@color/light_grey"
                app:helperTextEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="@+id/lastContact"
                app:layout_constraintStart_toStartOf="@+id/lastContact"
                app:layout_constraintTop_toBottomOf="@+id/lastContact">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pick_date" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/outsideNorwayLabel"
                style="@style/textBasic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/symptoms_outside_north_question"
                app:layout_constraintEnd_toEndOf="@+id/lastContactInput"
                app:layout_constraintStart_toStartOf="@+id/lastContactInput"
                app:layout_constraintTop_toBottomOf="@+id/lastContactInput" />


            <RadioGroup
                android:id="@+id/outsideNorwayGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/selection_group_outline"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="@+id/outsideNorwayLabel"
                app:layout_constraintStart_toStartOf="@+id/outsideNorwayLabel"
                app:layout_constraintTop_toBottomOf="@+id/outsideNorwayLabel">

                <RadioButton
                    android:id="@+id/outsideNorwayGroupYes"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/yes"
                    android:textColor="@color/radio_flat_text_selector" />

                <RadioButton
                    android:id="@+id/outsideNorwayGroupNo"
                    style="@style/textButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/no"
                    android:textColor="@color/radio_flat_text_selector" />

            </RadioGroup>


            <TextView
                android:id="@+id/backToNorway"
                style="@style/textBasic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/symptoms_back_to_norway_qustion"
                app:layout_constraintStart_toStartOf="@+id/outsideNorwayGroup"
                app:layout_constraintTop_toBottomOf="@+id/outsideNorwayGroup" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/backToNorwayInput"
                style="@style/inputOutlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconTint="@color/light_grey"
                app:helperTextEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="@+id/outsideNorwayGroup"
                app:layout_constraintStart_toStartOf="@+id/backToNorway"
                app:layout_constraintTop_toBottomOf="@+id/backToNorway">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pick_date" />
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:id="@+id/progressBackground"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/progress_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <View
                android:id="@+id/progressForeground"
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/progress_foreground"
                app:layout_constraintBottom_toBottomOf="@+id/progressBackground"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="@+id/progressBackground"
                app:layout_constraintTop_toTopOf="@+id/progressBackground" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveButton"
        style="@style/primaryButton"
        android:layout_width="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/step2BackButton" />

    <Button
        android:id="@+id/step2BackButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/secondary_button_background"
        android:backgroundTint="@color/white"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp" />

    <View
        android:id="@+id/buttonsBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/step2BackButton" />

</androidx.constraintlayout.widget.ConstraintLayout>